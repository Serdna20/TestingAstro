---
interface Props {
	title: string;
}

const { title } = Astro.props;
const headerSections = [
	{name: "Microsoft 365"},
	{name: "Teams"},
	{name: "Copilot"},
	{name: "Windows"},
	{name: "Xbox"},
	{name: "Soporte"},
]
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="container">
			<!-- Left header -->
			<div class="flex justify-between align-middle bg-white">
				<a href="">
					<img src="/public/windows.png" class="w-" alt="">
				</a>
				{
					headerSections.map((headerSections) => 
						<a href="" class="group flex justify-center items-center flex-col">
							<p>
								{headerSections.name}
								<div class="h-[5%] w-full text-white bg-white group-hover:bg-slate-950">.</div>
							</p>							
						</a>
					)
				}
			</div>
			<!-- Right header -->
			<div>
				<a href=""></a>
				<a href=""></a>
				<a href=""></a>
				<a href=""></a>
			</div>
		</header>


		<slot />
	</body>
</html>
<style is:global>
</style>
